# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type Todo {
  id: ID!
  title: String!
  done: Boolean!
  user: User!
}

type User {
  id: ID!
  name: String!
}

type Query {
  todo(id: ID!): Todo
  todos: [Todo!]!
}

input NewTodoInput {
  title: String!
  userId: ID!
}

input DeleteTodoInput {
  id: ID!
}

type Mutation {
  createTodo(input: NewTodoInput!): Todo!
  deleteTodo(input: DeleteTodoInput!): Boolean!
}
